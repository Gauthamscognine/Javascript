class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        int n = happiness.length;
        int m = n-1;
        long sum =0;
        Arrays.sort(happiness);
    for(int i =0;i<k;i++){
        int add= Math.max(happiness[m]-i,0);
        sum+= add;
        m--;
    }
    return sum;
    }
}
